{{>banner}}
<div class="container">
  <div class="row pt-4">
    <div class="col-md-6">
      <span class="card-subtitle mb-2 text-muted">{{dateFormate spot.created_Date}} 
        
        {{#each spot.categories}} 
            {{#if @first}}
             <i class="badge badge-secondary">{{this.name}}</i>
            {{/if}}
        {{/each}}
        </span>

        <h1>{{spot.name}}.</h1>
        <p>
          {{spot.description}}
        </p>
        <div class="row">
          <div class="col">
            <div class="Ranking">
                    <!-- Just a example of the ranking place -->
                    <a href="#"><i class="far fa-star"></i></a>
                    <a href="#"><i class="far fa-star"></i></a>
                    <a href="#"><i class="far fa-star"></i></a>
                    <a href="#"><i class="far fa-star"></i></a>
                </div>
          </div>
          <div class="col">
            By: {{spot.addedBy.name}}
          </div>
          <div class="col">
            Views: {{spot.views}}
          </div>
        </div>
        
    </div>
    <div class="col-md-6">
      {{> spot/carrousel }}
    </div>
      <div class="clearfix"></div>
      <div class="col-md-12">
        <h6>Description</h6>
        <hr>
        <div class="text-left descript_card mb-3">
          <div class="card border-light">
            <div class="card-body bg-light">
              <p class="w-100 text-justify">{{spot.description}}</p>
            </div>
          </div>
        </div>
        <h6>Amenities</h6>
        <hr>
        <div class="row mb-3">
          {{>spot/map}}
            {{> spot/amenities }}
        </div>
      </div>
      <div class="col-md-12">
          <div class="accordion" id="accordionExample">
            <div class="card border-light mb-3">
              <div class="card-header" id="headingOne">
                <h5 class="mb-0">
                  <button class="btn btn-link second_title" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Comments Box
                  </button>
                </h5>
              </div>

              <div id="collapseOne" class="collapse show mt-2" aria-labelledby="headingOne" data-parent="#accordionExample">
                <div class="card-body bg-light">
                  {{#each spot.comments}}
                    <div class="card border-light mb-2">
                      <div class="card-body bg-white coments_box">
                        <p class="card-text"><small class="text-muted">- {{this.created_Date}}</small></p>
                        <p><i class="fas fa-book-reader"></i> {{this.feed}}</p>
                      </div>
                    </div>
                  {{/each}}
                </div>
              </div>
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        <div class="col-md-12">
          {{> spot/comment}}
        </div>
  </div>
</div>