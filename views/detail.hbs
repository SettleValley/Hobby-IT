<div class="container-fluid">
  <div class="row pt-4">
    <div class="col-md-4">
      {{>spot/map}}
    </div>
    <div class="col-md-4">
      <div class="col-md-12">
        <div class="card bg-light border-light mb-3">
          <div class="card-header border-bottom-0">
            <span class="badge badge-secondary">Sport</span>
            <span class="text-right float-right">11/sept/2018</span>
          </div>
          <div class="card-body text-center">
            <p class="card-text city_tag"><small class="text-muted">Panama</small></p>
            <h5 class="card-title">{{spot.name}}</h5>
            <div class="row">
              <div class="col">
                <div class="social-icons-box">
                  <a href="#"><i class="fas fa-walking"></i></a>
                  <a href="#"><i class="fas fa-map-marked-alt"></i></a>
                  <a href="#"><i class="fas fa-location-arrow"></i></a>
                  <a href="#"><i class="fas fa-wifi"></i></a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <h6>Description</h6>
      <hr>
      <div class="text-left descript_card mb-3">
        <div class="card border-light">
          <div class="card-body bg-light">
            <p class="w-100 text-justify">{{spot.description}}</p>
          </div>
        </div>
      </div>
      <h6>Amenities</h6>
      <hr>
      <div class="row mb-3">
          {{> spot/amenities }}
      </div>
    </div>
    <div class="col-md-4">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          {{#each spot.gallery as |image| }}
            <div class="carousel-item {{#if @index}}active{{/if}}">
              <img class="d-block w-100" src="/uploads/{{image.filename}}" alt="First slide">
              <!-- <img class="d-block w-100" src="http://via.placeholder.com/720x480?text=HobbyIt" alt="First slide"> -->
            </div>
          {{/each}}
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="accordion" id="accordionExample">
            <div class="card border-light mb-3">
              <div class="card-header" id="headingOne">
                <h5 class="mb-0">
                  <button class="btn btn-link second_title" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Comments Box
                  </button>
                </h5>
              </div>

              <div id="collapseOne" class="collapse show mt-2" aria-labelledby="headingOne" data-parent="#accordionExample">
                <div class="card-body bg-light">
                  {{#each spot.comments}}
                    <div class="card border-light mb-2">
                      <div class="card-body bg-white coments_box">
                        <p class="card-text"><small class="text-muted">- {{this.created_Date}}</small></p>
                        <p><i class="fas fa-book-reader"></i> {{this.feed}}</p>
                      </div>
                    </div>
                  {{/each}}
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-12">
          {{> spot/comment}}
        </div>
      </div>
    </div>
  </div>
</div>
