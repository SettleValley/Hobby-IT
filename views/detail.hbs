<section class="grey-color py-5">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <h1 class="font-weight-bold ">
          {{spot.name}}
        </h1>
        <div class="social-icons-box">
          <a href="#"><i class="fab fa-instagram"></i></a>
          <a href="#"><i class="fab fa-twitter"></i></a>
          <a href="#"><i class="fab fa-facebook-square"></i></a>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="row pt-5">
  <div class="col-md-4">
    {{>spot/map}}
  </div>
  <div class="col-md-4">
    <div class="row">
      <div class="col-md-12">
        <div class="card border-light mb-3">
          <div class="card-header border-bottom-0">
            <span class="badge badge-secondary">Sport</span>
            <span class="text-right float-right">11/sept/2018</span>

          </div>
          <div class="card-body bg-light text-center">
            <h5 class="card-title">{{spot.name}}</h5>
            <p class="card-text"><small class="text-muted">Panama</small></p>
            <div class="row">
              <div class="col">
                <div class="social-icons-box">
                  <a href="#"><i class="fas fa-walking"></i></a>
                  <a href="#"><i class="fas fa-map-marked-alt"></i></a>
                  <a href="#"><i class="fas fa-location-arrow"></i></a>
                  <a href="#"><i class="fas fa-wifi"></i></a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-4">

  </div>
</div>

<section class="">
  <div class="">
    <div class="row">
      <div class="col-md-6">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              {{#each spot.gallery as |image| }}
                <div class="carousel-item {{#if @index}}active{{/if}}">
                  <img class="d-block w-100" src="/uploads/{{image.filename}}" alt="First slide">
                  <!-- <img class="d-block w-100" src="http://via.placeholder.com/720x480?text=HobbyIt" alt="First slide"> -->
                </div>
              {{/each}}
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        <!-- <img class="card-img" src="http://via.placeholder.com/720x480?text=HobbyIt" alt="Card image cap"> -->
      </div>
      <div class="col-md-6">
        <div class="container-fluid pt-4">
          <div class="row">
            <div class="col-md-12">
                <ul class="nav nav-tabs" role="tablist">
                	<li class="nav-item">
                		<a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab">Description</a>
                	</li>
                	<li class="nav-item">
                		<a class="nav-link" data-toggle="tab" href="#tabs-2" role="tab">Features</a>
                	</li>
                	<li class="nav-item">
                		<a class="nav-link" data-toggle="tab" href="#tabs-3" role="tab">Map</a>
                	</li>
                  <li class="nav-item">
                		<a class="nav-link" data-toggle="tab" href="#tabs-4" role="tab">Feedback</a>
                	</li>
                </ul><!-- Tab panes -->
                <div class="tab-content">
                	<div class="tab-pane active" id="tabs-1" role="tabpanel">
                		{{> spot/description }}
                	</div>
                	<div class="tab-pane" id="tabs-2" role="tabpanel">
                		{{> spot/feature }}
                	</div>
                	<div class="tab-pane" id="tabs-3" role="tabpanel">
                    {{> spot/map }}
                	</div>
                  <div class="tab-pane" id="tabs-4" role="tabpanel">
                    {{> spot/comment }}
                	</div>
                </div>
              <!-- <span>Latitud: {{spot.address.lat}}</span>
              <span>Longitud: {{spot.address.lng}}</span> -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
