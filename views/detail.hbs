<section class="grey-color py-5">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <h3 class="font-weight-bold ">
          {{spot.name}}
        </h3>
        <div class="social-icons-box">
          <a href="#"><i class="fab fa-instagram"></i></a>
          <a href="#"><i class="fab fa-twitter"></i></a>
          <a href="#"><i class="fab fa-facebook-f"></i></a>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="py-5">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h4 class="font-weight-bold">Details</h4>
        <hr class="my-4">
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              {{#each spot.gallery as |image| }}
                <div class="carousel-item {{#if @index}}active{{/if}}">
                  <img class="d-block w-100" src="/uploads/{{image.filename}}" alt="First slide">
                  <!-- <img class="d-block w-100" src="http://via.placeholder.com/720x480?text=HobbyIt" alt="First slide"> -->
                </div>
              {{/each}}
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        <!-- <img class="card-img" src="http://via.placeholder.com/720x480?text=HobbyIt" alt="Card image cap"> -->
      </div>
      <div class="col-md-6">
        <span>Latitud: {{spot.address.lat}}</span>
        <span>Longitud: {{spot.address.lng}}</span>
        <p>
          {{spot.description}}
        </p>
          {{> comment }}

      </div>
    </div>
  </div>
</section>

{{> map }}
